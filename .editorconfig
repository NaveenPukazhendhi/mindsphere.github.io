# EditorConfig is awesome: http://editorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

# C-style doc comments
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
indent_style = space
trim_trailing_whitespace = false
